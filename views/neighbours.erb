<h1>Found <%= @count %> places close to <%= @placename %></h1>
<table>
  <thead>
    <th>osm_id</th>
    <th>Name</th>
    <th>Place</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Map link</th>
    <th>Distance (km)</th>
  </thead>
  <tbody>
    <% if @places %>
      <% @places.each do |place| %>
      <tr>
        <td><%= place.osm_id %></td>
        <td><%= place.name %></td>
        <td><%= place.place %></td>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
        <td><a href="<%= place.map_url %>">Map</a></td>
        <td><%= (place.distance/1000.0).round 2 %> km </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
