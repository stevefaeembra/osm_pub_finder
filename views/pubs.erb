<h2>Found <%= @count %> pubs close to <strong><%= @placename %></strong></h2>
<table>
  <thead>
    <th>Pub Name</th>
    <th>Place</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Map link</th>
    <th>Distance (km)</th>
    <th>Walk time (min)</th>
  </thead>
  <tbody>
    <% if @places %>
      <% @places.each do |place| %>
      <tr>
        <td><a href="/pubs/<%= place.osm_id %>"><%= place.name %></a></td>
        <td>Pub</td>
        <td><%= place.latitude.round 4 %></td>
        <td><%= place.longitude.round 4 %></td>
        <td><a href="<%= place.map_url %>">Map</a></td>
        <td><%= (place.distance/1000.0).round 2 %> km </td>
        <td><%= ((place.distance/1000.0)*12.0*1.4).to_i %> min </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
