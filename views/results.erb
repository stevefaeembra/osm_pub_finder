<h1>Found <%= @count %> places matching <%= @pattern %></h1>
<table>
  <thead>
    <th>Name</th>
    <th>Place</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Map link</th>
    <th>Near</th>
    <th>Pubs</th>
  </thead>
  <tbody>
    <% if @places %>
      <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.place %></td>
        <td><%= place.latitude.round 4 %></td>
        <td><%= place.longitude.round 4 %></td>
        <td><a href="<%= place.map_url %>">Map</a></td>
        <td><a href="/neighbours/<%= place.osm_id %>">Nearby</a></td>
        <td><a href="/pubs/<%= place.osm_id %>">Pubs</a></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
